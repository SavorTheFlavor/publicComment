<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.me.comment.dao.AdDao">
	<insert id="insert">
		insert into ad(title,img_file_name,link,weight)
		 values(#{title},#{imgFileName},#{link},#{weight})
	</insert>
	
	<!-- 虽然看起来与分页无关，但会被分页拦截器分页掉的， *ByPage -->
	<select id="selectByPage" resultType="Ad"><!-- parameterType好像可以不写 -->
		select id,title,img_file_name,link,weight from ad
		<where>
			<if test="title != null and title != ''">
				title like '%'#{title}'%'
			</if>
		</where>
		order by weight desc,id
	</select>
	
</mapper>